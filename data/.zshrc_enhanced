# Fonction de diagnostic complet des variables d'environnement
EnvironmentDiagnostic() {
    echo "=== DIAGNOSTIC ENVIRONNEMENT D√âVELOPPEMENT ==="
    echo
    
    echo "üìç Variables principales:"
    echo "  STUDENT_WORKSPACE: ${STUDENT_WORKSPACE:-NON D√âFINI}"
    echo "  USER: ${USER:-NON D√âFINI}"
    echo
    
    echo "‚òï Java/JVM:"
    echo "  JAVA_HOME: ${JAVA_HOME:-NON D√âFINI}"
    [[ -n "$JAVA_HOME" ]] && echo "    Version: $(java -version 2>&1 | head -n1 | cut -d'"' -f2 2>/dev/null || echo 'N/A')"
    echo "  GRADLE_USER_HOME: ${GRADLE_USER_HOME:-NON D√âFINI}"
    echo
    
    echo "üêç Python:"
    echo "  PYTHONUSERBASE: ${PYTHONUSERBASE:-NON D√âFINI}"
    echo "  PIP_USER: ${PIP_USER:-NON D√âFINI}"
    echo "  POETRY_HOME: ${POETRY_HOME:-NON D√âFINI}"
    echo
    
    echo "ü¶Ä Rust:"
    echo "  CARGO_HOME: ${CARGO_HOME:-NON D√âFINI}"
    echo "  RUSTUP_HOME: ${RUSTUP_HOME:-NON D√âFINI}"
    echo
    
    echo "üêπ Go:"
    echo "  GOPATH: ${GOPATH:-NON D√âFINI}"
    echo "  GOCACHE: ${GOCACHE:-NON D√âFINI}"
    echo
    
    echo "üê≥ Docker:"
    echo "  DOCKER_CONFIG: ${DOCKER_CONFIG:-NON D√âFINI}"
    echo
    
    echo "üíª IDE/√âditeurs:"
    echo "  VSCODE_PORTABLE_EXTENSIONS: ${VSCODE_PORTABLE_EXTENSIONS:-NON D√âFINI}"
    echo "  IDEA_HOME: ${IDEA_HOME:-NON D√âFINI}"
    echo
    
    echo "üìÅ Variables XDG (Impact √©lev√©!):"
    echo "  XDG_CONFIG_HOME: ${XDG_CONFIG_HOME:-NON D√âFINI (utilise ~/.config)}"
    echo "  XDG_DATA_HOME: ${XDG_DATA_HOME:-NON D√âFINI (utilise ~/.local/share)}"
    echo "  XDG_CACHE_HOME: ${XDG_CACHE_HOME:-NON D√âFINI (utilise ~/.cache)}"
    
    if [[ -n "$XDG_CONFIG_HOME" || -n "$XDG_DATA_HOME" || -n "$XDG_CACHE_HOME" ]]; then
        echo "  ‚ö†Ô∏è  ATTENTION: Variables XDG red√©finies - peut affecter toutes les applications!"
    fi
    echo
    
    echo "üéõÔ∏è  Variables de contr√¥le (pour activer/d√©sactiver):"
    echo "  STUDENT_USE_PORTABLE_JAVA: ${STUDENT_USE_PORTABLE_JAVA:-0}"
    echo "  STUDENT_USE_PORTABLE_PYTHON: ${STUDENT_USE_PORTABLE_PYTHON:-0}"
    echo "  STUDENT_USE_PORTABLE_DOCKER: ${STUDENT_USE_PORTABLE_DOCKER:-0}"
    echo "  STUDENT_USE_PORTABLE_VSCODE: ${STUDENT_USE_PORTABLE_VSCODE:-0}"
    echo "  STUDENT_USE_PORTABLE_IDEA: ${STUDENT_USE_PORTABLE_IDEA:-0}"
    echo "  STUDENT_USE_PORTABLE_XDG: ${STUDENT_USE_PORTABLE_XDG:-0}"
    echo
    
    echo "üìä Analyse d'impact:"
    local impact_level="FAIBLE"
    local warnings=0
    
    [[ -n "$JAVA_HOME" && "$JAVA_HOME" == "$STUDENT_WORKSPACE"* ]] && { impact_level="MOD√âR√â"; ((warnings++)); }
    [[ -n "$PYTHONUSERBASE" ]] && { impact_level="MOD√âR√â"; ((warnings++)); }
    [[ -n "$XDG_CONFIG_HOME" || -n "$XDG_DATA_HOME" ]] && { impact_level="√âLEV√â"; ((warnings+=3)); }
    
    echo "  Niveau d'impact: $impact_level"
    echo "  Nombre d'avertissements: $warnings"
    
    if [[ $warnings -gt 0 ]]; then
        echo
        echo "üîß Pour d√©sactiver des fonctionnalit√©s:"
        echo "  export STUDENT_USE_PORTABLE_JAVA=0    # Utiliser Java syst√®me"
        echo "  export STUDENT_USE_PORTABLE_PYTHON=0  # Utiliser Python syst√®me"
        echo "  export STUDENT_USE_PORTABLE_XDG=0     # Utiliser chemins XDG syst√®me"
        echo "  Puis red√©marrez votre terminal"
    fi
    
    echo
    echo "=== FIN DIAGNOSTIC ==="
}

# Fonction pour configurer en mode s√©curis√© (sans impact sur l'existant)
SafeEnvironmentSetup() {
    echo "üõ°Ô∏è  Configuration en mode s√©curis√© (sans impact sur l'existant)..."
    
    # D√©sactiver toutes les variables potentiellement impactantes
    export STUDENT_USE_PORTABLE_JAVA=0
    export STUDENT_USE_PORTABLE_PYTHON=0
    export STUDENT_USE_PORTABLE_DOCKER=0
    export STUDENT_USE_PORTABLE_VSCODE=0
    export STUDENT_USE_PORTABLE_IDEA=0
    export STUDENT_USE_PORTABLE_XDG=0
    
    echo "‚úÖ Configuration s√©curis√©e activ√©e"
    echo "   Seules les variables Node.js, Rust, Go et Android sont actives"
    echo "   Utilisez 'EnvironmentDiagnostic' pour v√©rifier"
}

# Fonction pour activer le mode portable complet
PortableEnvironmentSetup() {
    echo "üöÄ Configuration en mode portable complet..."
    echo "‚ö†Ô∏è  ATTENTION: Ceci peut affecter vos configurations existantes!"
    
    read -p "√ätes-vous s√ªr de vouloir continuer? (y/N): " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo "‚ùå Annul√©"
        return 1
    fi
    
    # Activer toutes les variables portables
    export STUDENT_USE_PORTABLE_JAVA=1
    export STUDENT_USE_PORTABLE_PYTHON=1
    export STUDENT_USE_PORTABLE_DOCKER=1
    export STUDENT_USE_PORTABLE_VSCODE=1
    export STUDENT_USE_PORTABLE_IDEA=1
    export STUDENT_USE_PORTABLE_XDG=1
    
    echo "‚úÖ Configuration portable compl√®te activ√©e"
    echo "üîÑ Red√©marrez votre terminal pour que les changements prennent effet"
    echo "   Utilisez 'EnvironmentDiagnostic' pour v√©rifier l'impact"
}

# Aliases pratiques
alias env_diagnostic='EnvironmentDiagnostic'
alias safe_setup='SafeEnvironmentSetup'
alias portable_setup='PortableEnvironmentSetup'

